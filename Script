-- ANIMATION UI --

local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Players = game:GetService("Players")
local plr = Players.LocalPlayer

--========================================================--
-- UI WINDOW
--========================================================--

local Window = Rayfield:CreateWindow({
    Name = "Animation Manager",
    LoadingTitle = "Wait Ya!",
    LoadingSubtitle = "Sei Animation UI"
})

--========================================================--
-- POSE TAB
--========================================================--

local PoseTab = Window:CreateTab("Pose")
PoseTab:CreateSection("All Poses")

local currentPose

local function PlayPose(id)
    -- stop anim lain (kalau kamu punya StopAnim(), pakai itu)
    if currentPose then
        pcall(function() currentPose:Stop() end)
    end

    local char = plr.Character
    if not char then return end

    local hum = char:FindFirstChildWhichIsA("Humanoid")
    if not hum then return end

    local anim = Instance.new("Animation")
    anim.AnimationId = id

    currentPose = hum:LoadAnimation(anim)
    currentPose:Play()
end

local function AddPose(name, id)
    PoseTab:CreateButton({
        Name = name,
        Callback = function()
            PlayPose(id)
        end
    })
end

--========================================================--
-- POSE LIST
--========================================================--
PoseTab:CreateButton({
    Name = "â›” STOP ANIMATION",
    Callback = function()
        if currentPose then
            pcall(function() currentPose:Stop() end)
        end
        StopAnim()
    end
})

